{
    "cSpell.allowCompoundWords": true,
    "cSpell.language": "en,en-US",
    "cSpell.words": [
        "ampm",
        "conds",
        "cyclomatic",
        "encapsed",
        "globby",
        "kalimahapps",
        "levn",
        "retif",
        "tabaqa",
        "taqwim",
        "Unparser"
    ],
    "css.validate": false,
    "easycompile.compile": {
        "ignore": [
            "sass",
            "scss"
        ]
    },
    "editor.autoIndent": "advanced",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.codeLens": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.defaultFormatter": null,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.lineNumbers": "interval",
    "editor.snippetSuggestions": "bottom",
    "editor.stickyScroll.enabled": true,
    "editor.trimAutoWhitespace": false,
    "errorLens.errorColor": "rgb(199 76 102 / 10%)",
    "errorLens.errorTextColor": "rgba(255,255,255,0.3)",
    "errorLens.hintColor": "rgba(20,140,140,0.1)",
    "errorLens.hintTextColor": "rgba(255,255,255,0.3)",
    "errorLens.infoColor": "rgba(0,200,0,0.1)",
    "errorLens.infoTextColor": "rgba(240,240,240,0.3)",
    "errorLens.warningColor": "rgb(255 213 128 / 5%)",
    "errorLens.warningTextColor": "rgba(255,255,255,0.3)",
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json",
        "jsonc",
        "json5"
    ],
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.exclude": {
        "out": false
    },
    "files.trimTrailingWhitespace": false,
    "git.showPushSuccessNotification": true,
    "gitlens.codeLens.enabled": false,
    "markdown.updateLinksOnFileMove.enabled": "prompt",
    "prettier.enable": false,
    "scss.validate": false,
    "search.collapseResults": "alwaysExpand",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/tests": true,
        "**/.vscode": true,
        "**/out/**": true,
        "package-lock.json": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true,
        "**/docs": true,
        "**/.vscode-test": true,
        "**/taqwim/src/phpparser": true,
    },
    "search.quickOpen.includeHistory": false,
    "tailwindCSS.emmetCompletions": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass"
            ]
        }
    },
    "terminal.integrated.tabs.enabled": true,
    "typescript.tsc.autoDetect": "off",
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "typescript.validate.enable": true,
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.tree.indent": 20,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[scss]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[php]": {
        "editor.defaultFormatter": "KalimahApps.taqwim"
    }
}